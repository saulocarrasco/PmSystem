@page "/items-asoc"
@using PmSystem.FrontEnd.Data
@using PmSystem.FrontEnd.Pages.Components.Shared
@inject NavigationManager NavigationManager

<PageTitle>Customer Items</PageTitle>

<h1>Customers Items List</h1>
 <div class="row">
    <div class="col">
        <button class="btn btn-primary float-end" @onclick="RedirectToCreate">Create</button>
    </div>
</div>
<TableComponent ListEndpoint="customeritems" TItem="CustomerItemListViewModel" EditUrl="customer-item-form" DeleteEndPoint="customeritems" Properties="Properties" />

@code {
    IEnumerable<string> Properties = new List<string>()
    {
        "Id",
        "Quantity",
        "CustomerName",
        "ProductName",
        "ProductPrice"
    };

    private void RedirectToCreate()
    {
        NavigationManager.NavigateTo("/customer-item-form");
    }
}