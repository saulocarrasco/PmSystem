@page "/customers"
@using PmSystem.FrontEnd.Data
@using PmSystem.FrontEnd.Pages.Components.Shared
@inject NavigationManager NavigationManager

<PageTitle>Customers</PageTitle>

<h1>Customers List</h1>
 <div class="row">
    <div class="col">
        <button class="btn btn-primary float-end" @onclick="RedirectToCreate">Create</button>
    </div>
</div>
<TableComponent ListEndpoint="customers" TItem="CustomerListViewModel" EditUrl="customer-form" DeleteEndPoint="customers" />

@code {
    private void RedirectToCreate()
    {
        NavigationManager.NavigateTo("/customer-form");
    }
}